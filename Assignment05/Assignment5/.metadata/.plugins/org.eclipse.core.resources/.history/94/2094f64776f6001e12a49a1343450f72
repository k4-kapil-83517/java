            switch (choice) {
                case 0:
                    System.out.println("Exiting...");
                    System.out.println("Thank you...");
                    System.exit(0);
                case 1:
                   
                    break;
                case 2:
                   
                    break;
                case 3:
                   
                    break;
                case 4:
                   
                    break;
              
                default:
                    System.out.println("Invalid choice!");
            }
          
        }
     // scanner.close();
       
    }

}
